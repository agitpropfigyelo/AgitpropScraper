# top-most EditorConfig file
root = true

# Global settings (applied to all files)
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true

# C# specific settings
[*.cs]
dotnet_sort_system_directives_first = true
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = false
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_prefer_braces = when_multiline
csharp_new_line_before_open_brace = all
csharp_style_prefer_auto_properties = true
csharp_style_prefer_expression_bodies = when_possible
csharp_style_pattern_matching_over_is_with_cast_check = true
csharp_style_prefer_conditional_expression_over_assignment = true
csharp_style_prefer_conditional_expression_over_return = true

# Ignore auto-generated files
[*.Designer.cs]
generated_code = true

[*.g.cs]
generated_code = true

[*.g.i.cs]
generated_code = true
